{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "plugins": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
}
